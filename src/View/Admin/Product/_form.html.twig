<form method="post" class="col-6 justify-content-center" enctype="multipart/form-data">
<div class="form-group">
    <input type="hidden" value="{{ product.id }}" name="id">
    <label for="name">Nom : </label>
    <input type="text" class="form-control" value="{{ product.name }}" id="name" name="name" placeholder="Doudou">
    <label for="name">Description : </label>
    <input type="text" class="form-control" value="{{ product.description }}" id="description" name="Description" placeholder="description">
    <label for="name">Prix : </label>
    <input type="text" class="form-control" value="{{ product.price }}" id="Price" name="Price" placeholder="Price">
    <label for="name">Image : </label>
    <input type="text" class="form-control" value="{{ product.picture }}" id="picture" name="picture" placeholder="Picture">
    {% if category.picture is not empty %}
        <img src="{{ product.picture }}" alt="Illustration de {{ product.name }}">
    {% else %}
        <img src="https://via.placeholder.com/150x150" alt="">
    {% endif %}
    <div class="row justify-content-start">
        <div class="col-5 btn-file">
            <label for="fichier">Ajouter un fichier : </label>
            <input type="file" name="fichier"/>
        </div>
    </div>
    <div class="row justify-content-end">
        <div class="col-2">
            <button type="submit" class="btn btn-success">Valider</button>
        </div>
    </div>
</div>
</form>
