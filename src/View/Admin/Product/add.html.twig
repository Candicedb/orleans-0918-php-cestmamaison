{% extends 'Admin/layoutAdmin.html.twig' %}
{% block content %}
    <div class="container-fluid">
        <h1>Ajouter un nouveau produit</h1>
        {% if errors is not empty %}
            <div class="alert alert-danger">
                <ul>
                    {% for error in errors %}
                    <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        {% include 'Admin/Product/_form.html.twig' %}
    </div>
{% endblock %}
