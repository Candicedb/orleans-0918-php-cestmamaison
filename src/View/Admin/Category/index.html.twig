{% extends 'Admin/layoutAdmin.html.twig' %}
{% block content %}
<div class="container pt-5">
    <div class="row pt-3 justify-content-center">
        <h1 class="justify-content-center">Catégories</h1>
    </div>
    <div class="row pt-3 justify-content-center">
        <a href="/admin/category/add" class="btn btn-success btn-lg active" role="button" aria-pressed="true">Ajouter</a>
    </div>
    <div class="row justify-content-around pt-5">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Nom de la catégorie</th>
                <th scope="col">Image</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        <tbody>
        {% for category in categories %}
        <tr>
            <td>{{ category.name }}</td>
            {% if category.picture is not empty %}
                <td><img class="img-adm" src="/../assets/images/CategoryImages/{{ category.picture }}" alt="Illustration de {{ category.name }}"></td>
            {% else %}
                <td><img src="https://via.placeholder.com/150x150" alt=""></td>
            {% endif %}
            <td><a href="/admin/category/update/{{ category.id }}" class="btn btn-secondary btn-md active mr-5 mt-5" role="button" aria-pressed="true">Modifier</a></td>
            <td><button type="button" class="btn btn-danger mt-5" data-toggle="modal" data-target="#exampleModal{{ category.id }}">Supprimer</button>

                <div class="modal fade" id="exampleModal{{ category.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title pl-1" id="exampleModalLabel">Confirmation</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Vous souhaitez supprimer la Catégorie {{ category.name }} ?</p>
                            </div>
                            <div class="modal-footer">
                                <form action="" method="post" role="form">
                                    <input type="hidden"  name="deleteCategory" value="{{ category.id }}" >
                                    <button type="submit" class="btn btn-danger" name="delete">Supprimer</button>
                                </form>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        </tbody>
        {% endfor %}
    </div>
</div>
{% endblock %}
