{% extends 'Visitor/layout.html.twig' %}
{% block content %}
    <div class="container-fluid" id="contact">
        <div class="container mt-5 pt-5">
            <div class="mt-5 mb-5 pt-5">
                <h2>Où nous trouver?</h2>
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-xl-6 d-flex align-items-center">
                        <div class="col-lg-10 col-xl-10">
                            <div>
                                <p>C’EST MA MAISON !</p>
                                <p>306, RUE DE BOURGOGNE</p>
                                <p>45000 ORLEANS</p>
                                <p>Tel. : 02 38 53 72 13</p>
                            </div>
                            <div>
                                <img class="d-block w-100" src="/assets/images/boutique_ext.jpg" alt="Facade de la boutique">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-xl-6">
                        <div class="card">
                            <iframe src="https://www.openstreetmap.org/export/embed.html?bbox=1.9038158655166628%2C47.89913920274405%2C1.9071766734123232%2C47.90071624767519&amp;layer=mapnik&amp;marker=47.899927731214625%2C1.9054962694644928" frameborder="0" scrolling="no" marginheight="0"
                                    marginwidth="0" height="420">
                            </iframe>
                            <button type="button" class="btn pb-0 mb-0 mt-0 btn-secondary"><a href="https://www.openstreetmap.org/?mlat=47.89993&amp;mlon=1.90550#map=19/47.89993/1.90550"><p>Afficher une carte plus grande</p></a></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="mt-5 mb-5 pt-5">
                <h2>Contactez-nous!</h2>
                    <form>
                        <div class="form-row">
                            <div class="col-md-4 mb-3">
                                <label for="validationServer01">Votre Prénom:</label>
                                <input type="text" class="form-control is-valid" id="validationServer01" placeholder="Votre Prénom..." value="Mark" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationServer02">Votre Nom:</label>
                                <input type="text" class="form-control is-valid" id="validationServer02" placeholder="Votre Nom..." value="Otto" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Votre commentaire:</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Ecrire votre commentaire ici..."></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Votre adresse mail !</label>
                            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="nom@example.com">
                        </div>
                        <button class="btn btn-secondary" type="submit">Validation du formulaire</button>
                    </form>
            </div>
        </div>
    </div>
{% endblock content %}
