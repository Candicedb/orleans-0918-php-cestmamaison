{% extends 'Visitor/layout.html.twig' %}

{% block content %}
    <section class="bg-color">
        <section class="productsByBrand">
            <div class="container-fluid">
                <img class="img-fluid img-banniere" src="/assets/images/BrandImages/{{ productAndBrand[0].pictureBrand }}" alt="Illustration de {{ brand.name }}"/>
                <div class="row justify-content-center">
                    <div class="col-10 col-md-2 mt-5">
                        <h1 class="category">{{ productAndBrand[0].nameBrand }}</h1>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row justify-content-center">
                    {% for product in productAndBrand %}
                        <div class="col-sm-12 col-md-6 col-lg-4">
                            <div class="card">
                                <img class="card-img-top imgHeight" src="/assets/images/ProductImages/{{ product.picture }}" alt="">
                                <a class="card-title productHeight" href="/product/{{ product.id }}">{{ product.name }}</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </section>
{% endblock %}
