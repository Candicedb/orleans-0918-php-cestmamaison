{% extends 'Visitor/layout.html.twig' %}

{% block content %}
    <section class="productsByCategory">
        <div class="container-fluid">
            <img class="img-fluid img-banniere" src="/assets/images/CategoryImages/{{ productAndCategory[0].pictureCategory }}"/>
            <div class="row justify-content-center">
                <div class="col-10 col-md-2">
                    <h1>{{ productAndCategory[0].nameCategory }}</h1>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                {% for product in productAndCategory %}
                    <div class="col-sm-12 col-md-6 col-lg-4">
                        <div class="card">
                            <img class="card-img-top imgHeight" src="/assets/images/ProductImages/{{ product.picture }}" alt="">
                            <a class="card-title productHeight" href="/product/{{ product.id }}">{{ product.name }}</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}


